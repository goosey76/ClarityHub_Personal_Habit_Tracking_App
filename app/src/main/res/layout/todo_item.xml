<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Titel -->
    <TextView
        android:id="@+id/todo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Titel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Zeitraum -->
    <TextView
        android:id="@+id/todo_deadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zeitraum: 01.01.2024 10:00"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Wichtigkeit -->
    <TextView
        android:id="@+id/todo_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wichtigkeit: Hoch"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_deadline" />

    <!-- Kategorie -->

    <!-- Wiederholung -->

    <!-- Beschreibung -->

    <TextView
        android:id="@+id/todo_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategorie: Arbeit"
        android:textSize="14sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_priority" />

    <TextView
        android:id="@+id/todo_repetitions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wiederholung: 3x"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_category" />

    <TextView
        android:id="@+id/todo_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Beschreibung: Details zur Aufgabe"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_repetitions" />

</androidx.constraintlayout.widget.ConstraintLayout>
